<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Drag the boxes with corresponding\n names according to the numbers given\n 1. Pump 1\n 2. Pump 2\n 3. High water\n 4. Override\n 5. Start\n 6. Stop"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_diagram"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/button_reset_pump1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "0dp"
        android:text="Reset pump 1 time"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_reset_pump2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "40dp"
        android:text="Reset pump 2 time"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView_diagram"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/sumppump_diagram"
        app:layout_constraintTop_toBottomOf="@+id/button_reset_pump2"/>
</androidx.constraintlayout.widget.ConstraintLayout>