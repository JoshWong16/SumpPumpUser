<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowLightStatus">

    <TextView
        android:id="@+id/light6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:text="status"
        app:layout_constraintStart_toEndOf="@+id/prelight6"
        app:layout_constraintTop_toBottomOf="@+id/prelight5" />

    <TextView
        android:id="@+id/prelight5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Start:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prelight4" />

    <TextView
        android:id="@+id/light5"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:text="status"
        app:layout_constraintStart_toEndOf="@+id/prelight5"
        app:layout_constraintTop_toBottomOf="@+id/prelight4" />

    <TextView
        android:id="@+id/prelight6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Stop:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prelight5" />

    <TextView
        android:id="@+id/prelight4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Pump 2:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prelight3" />

    <TextView
        android:id="@+id/light4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:text="status"
        app:layout_constraintStart_toEndOf="@+id/prelight4"
        app:layout_constraintTop_toBottomOf="@+id/prelight3" />

    <TextView
        android:id="@+id/light1"
        android:layout_width="41dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="184dp"
        android:text="status"
        app:layout_constraintStart_toEndOf="@+id/prelight1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prelight1"
        android:layout_width="211dp"
        android:layout_height="26dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="179dp"
        android:background="#EC2424"
        android:fontFamily="sans-serif-black"
        android:text="High Water Alarm Status:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prelight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:background="#EC7A56"
        android:backgroundTint="#FA4B14"
        android:fontFamily="sans-serif-black"
        android:text="Override Status: "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prelight1" />

    <TextView
        android:id="@+id/light2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="44dp"
        android:text="status"
        app:layout_constraintStart_toEndOf="@+id/prelight2"
        app:layout_constraintTop_toBottomOf="@+id/prelight1" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="Refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prelight3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Pump 1:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prelight2" />

    <TextView
        android:id="@+id/light3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:text="status"
        app:layout_constraintStart_toEndOf="@+id/prelight3"
        app:layout_constraintTop_toBottomOf="@+id/prelight2" />
</androidx.constraintlayout.widget.ConstraintLayout>